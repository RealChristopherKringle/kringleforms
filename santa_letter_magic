    }
    #container {
      max-width: 600px;
      margin: auto;
      position: relative;
    }
    #santa-form, #confirmation, #tracker, #progress-container {
      transition: opacity 0.8s ease;
    }
    #confirmation, #tracker, #progress-container {
      display: none;
      opacity: 0;
    }
    #confirmation.show, #tracker.show, #progress-container.show {
      display: block;
      opacity: 1;
    }
    label {
      font-weight: bold;
      margin-top: 10px;
      display: block;
    }
    input, select, textarea {
      width: 100%;
      padding: 10px;
